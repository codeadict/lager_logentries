{minimum_otp_vsn, "19"}.

{erl_opts, [debug_info,
            {parse_transform, lager_transform}
           ]}.

{deps, [
        {lager, "3.2.4"},
        {backoff, "1.1.3"},
        {jsx, "2.9.0"}
       ]}.

{project_plugins, [covertool]}.

{profiles, [
            {test, [
                    {erl_opts, [nowarn_export_all]}
                   ]}
           ]}.

{alias, [{test, [{ct, "--cover"}, {cover, "-v"}]}]}.
